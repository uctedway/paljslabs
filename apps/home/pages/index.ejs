<script>
(() => {
  const slider = document.getElementById('heroSlider');
  const paginationEl = document.getElementById('heroSwiperPagination');
  if (!slider || !paginationEl || typeof Swiper === 'undefined') return;

  const heroSwiper = new Swiper(slider, {
    loop: true,
    speed: 650,
    autoplay: {
      delay: 4200,
      disableOnInteraction: false,
      pauseOnMouseEnter: true,
    },
    pagination: {
      el: paginationEl,
      clickable: true,
    },
  });

  slider.addEventListener('mouseenter', () => {
    if (heroSwiper.autoplay) heroSwiper.autoplay.stop();
  });
  slider.addEventListener('mouseleave', () => {
    if (heroSwiper.autoplay) heroSwiper.autoplay.start();
  });
})();
</script>
