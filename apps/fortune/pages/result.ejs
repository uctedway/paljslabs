<div class="result-container">
  <div class="result-header">
    <h1><%= featureTitle %> 결과</h1>
    <p class="birth-info">결과 ID: <%= resultId %></p>
    <% if (summary) { %>
      <p class="birth-info"><%= summary %></p>
    <% } %>
  </div>

  <div id="result-content" class="result-content"></div>

  <div class="result-actions">
    <a href="/fortune" class="btn-home">다른 메뉴 보기</a>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/dompurify@3.2.6/dist/purify.min.js"></script>
<script>
  const markdown = <%- JSON.stringify(claudeResult) %>;
  const unsafeHtml = marked.parse(markdown || '결과가 없습니다.');
  const safeHtml = DOMPurify.sanitize(unsafeHtml);
  document.getElementById('result-content').innerHTML = safeHtml;
</script>
